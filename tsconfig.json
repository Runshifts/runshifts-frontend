{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/_assets/svgs/Gear.jsx",
    "app/_redux/notes.slice.js",
    "app/_assets/svgs/Logout.jsx",
    "app/_components/ProfileSettingsComponents/DisplayPictureInput.jsx",
    "app/_components/ProfileSettingsComponents/TwoFAInfoBlock.jsx"
, "app/homeEmployee/page.jsx"  ],
  "exclude": ["node_modules"]
}
